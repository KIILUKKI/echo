rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile pictures - users can only upload/delete their own
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if
        request.auth != null &&
        request.auth.uid == userId &&
        request.resource.size <= 5 * 1024 * 1024 &&  // Max 5MB
        request.resource.contentType.matches('image/.*');
      allow delete: if
        request.auth != null &&
        request.auth.uid == userId;
    }
    
    // Room images (if you want to add room backgrounds later)
    match /rooms/{roomId}/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }
    
  }
}
